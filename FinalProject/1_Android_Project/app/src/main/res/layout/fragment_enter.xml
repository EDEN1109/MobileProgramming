<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/babyyelloColor">

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="공구 제목"
                    android:textColor="@color/blackColor"/>

                <EditText
                    android:id="@+id/title_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:theme="@style/EditTheme"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="수량(무게)"
                    android:textColor="@color/blackColor"/>

                <EditText
                    android:id="@+id/weight_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:theme="@style/EditTheme"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="단위"
                    android:textColor="@color/blackColor"/>

                <EditText
                    android:id="@+id/unit_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:theme="@style/EditTheme"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text="마감 날짜"
                android:textColor="@color/blackColor"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:yearListSelectorColor="@color/blackColor"
                    android:theme="@style/PickerTheme"/>

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:layout_weight="2"
                    android:timePickerMode="spinner"
                    android:yearListSelectorColor="@color/blackColor"
                    android:theme="@style/PickerTheme"/>

            </LinearLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="가격"
                        android:textColor="@color/blackColor"/>

                    <EditText
                        android:id="@+id/price_enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="12"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:text="0"
                        android:textColor="@color/blackColor"
                        android:theme="@style/EditTheme"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="참여 인원"
                        android:textColor="@color/blackColor"/>

                    <Button
                        android:id="@+id/minus"
                        android:layout_width="35dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="2"
                        android:text="-"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:background="@drawable/rectangle_all"/>
                    <EditText
                        android:id="@+id/people_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:focusableInTouchMode="false"
                        android:text="2"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:theme="@style/EditTheme"/>

                    <Button
                        android:id="@+id/plus"
                        android:layout_width="35dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:text="+"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:background="@drawable/rectangle_all"/>



                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="공구 가격은"
                android:textSize="30sp"
                android:textColor="@color/blackColor"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인당 "
                    android:textSize="30sp"
                    android:textColor="@color/blackColor"/>

                <TextView
                    android:id="@+id/cal_price_enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_____"
                    android:textSize="30sp"
                    android:textColor="@color/blackColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원 입니다."
                    android:textSize="30sp"
                    android:textColor="@color/blackColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_enter"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_photo_white_24dp2"/>
                <Button
                    android:id="@+id/image_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="이미지 등록"
                    android:textSize="20sp"
                    android:textColor="@color/blackColor"
                    android:background="@drawable/rectangle_all"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <RadioGroup
                android:id="@+id/route_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="직접 만나서 분배"
                    android:textColor="@color/blackColor"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="다른 장소를 이용"
                    android:textColor="@color/blackColor"
                    android:textSize="20sp"
                    android:textAlignment="center" />
            </RadioGroup>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:text="만날 장소" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/address_enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textMultiLine"
                        android:focusableInTouchMode="false"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:textColor="@color/blackColor"
                        android:hint="주소를 검색하세요"
                        android:theme="@style/EditTheme"/>

                    <Button
                        android:id="@+id/address_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:background="@drawable/rectangle_all"
                        android:text="주소 검색"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/maddress_enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:hint="상세 주소를 입력하세요"
                        android:theme="@style/EditTheme"/>
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="공구 설명"
                        android:textColor="@color/blackColor"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/data_enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:paddingTop="8sp"
                        android:paddingBottom="8sp"
                        android:paddingLeft="8sp"
                        android:paddingRight="8sp"
                        android:gravity="left"
                        android:theme="@style/EditTheme"
                        />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/productInfo_enter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:text="등록하기"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@drawable/like_bottombar"
        />

</LinearLayout>