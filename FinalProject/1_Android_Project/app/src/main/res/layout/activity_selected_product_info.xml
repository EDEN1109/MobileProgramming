<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="@color/babyyelloColor"
        >

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <TextView
                android:id="@+id/title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="양파 3kg"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@color/blackColor"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/restTime_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="남은 시간 : 00:17:45.2"
                    android:textSize="20sp"
                    android:textColor="@color/blackColor"
                    android:background="@drawable/round_rectangle"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/nomGroup_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="참여인원 2/3"
                    android:textSize="20sp"
                    android:layout_gravity="right"
                    android:textColor="@color/blackColor"
                    android:background="@drawable/round_rectangle"
                    />

            </LinearLayout>


            <ImageView
                android:id="@+id/Image_info"
                android:layout_width="380dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/OriginKg_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="3.00kg"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/blackColor"
                    android:background="@color/yelloColor"
                    />

                <TextView
                    android:id="@+id/GroupKg_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="1.00kg"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/blackColor"
                    android:background="@color/yelloColor"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/OriginPrice_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="3910원"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/blackColor"
                    android:background="@color/yelloColor"
                    />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/white_arrow_forward_24dp"
                    android:background="@drawable/rectangle_all"
                    />

                <TextView
                    android:id="@+id/GroupPrice_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="1303원"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/blackColor"
                    android:background="@color/yelloColor"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/Content_info"
                android:text="혼자 먹기에는 3kg가 너무 많네요~"
                android:textSize="18sp"
                android:textColor="#ff000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/rectangle_line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Distribution_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 분배 방법"
                        android:textColor="@color/blackColor"
                        android:background="@color/yelloColor"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/DistributionContent_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_line"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:text="2019년 11월 28일"
                        android:textColor="#ff000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/DistributionContent_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_line"
                        android:layout_marginBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:text="한국기술교육대학교 gec 앞"
                        android:textColor="#ff000000"
                        android:textSize="18sp" />

                </LinearLayout>

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_marginBottom="15dp"
                tools:context=".ShowSelectedProductActivity" />
            </LinearLayout>
            </LinearLayout>

        </ScrollView>
    <Button
        android:id="@+id/JoinButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:text="참여하기"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@drawable/like_bottombar"
        />

</LinearLayout>
